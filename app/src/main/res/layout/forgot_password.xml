<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        android:id="@+id/header"
        layout="@layout/actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/dimen_5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dimen_25dp">

        <com.tnedicca.routewise.views.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:text="@string/reset_text1"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_reset_text"
            app:face="@string/font_malgun_semi_light" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20dp">

            <RelativeLayout
                android:id="@+id/email_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.tnedicca.routewise.views.CustomTextView
                    android:id="@+id/email_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_20dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:hint="Email"
                    android:maxLines="1"
                    android:paddingRight="@dimen/dimen_30dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/battleshipGrey"
                    android:textSize="@dimen/dimen_reset_text"
                    app:face="@string/font_malgun_semi_light" />

                <com.tnedicca.routewise.views.CustomRadioButton
                    android:id="@+id/radio_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

            <View
                android:id="@+id/view1"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:layout_below="@+id/email_layout"
                android:layout_marginBottom="@dimen/dimen_5dp"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginRight="@dimen/dimen_40dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:background="@android:color/darker_gray" />

            <RelativeLayout
                android:id="@+id/phone_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view1">

                <com.tnedicca.routewise.views.CustomTextView
                    android:id="@+id/phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_20dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:hint="phone"
                    android:maxLines="1"
                    android:paddingRight="@dimen/dimen_30dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/battleshipGrey"
                    android:textSize="@dimen/dimen_reset_text"
                    app:face="@string/font_malgun_semi_light" />

                <com.tnedicca.routewise.views.CustomRadioButton
                    android:id="@+id/radio_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>
        </RelativeLayout>

        <com.tnedicca.routewise.views.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:text="@string/reset_text2"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_reset_text"
            app:face="@string/font_malgun_semi_light" />


        <com.tnedicca.routewise.views.CustomButton
            android:id="@+id/next_button"
            android:layout_width="@dimen/dimen_200dp"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:background="@drawable/login_button_shape"
            android:gravity="center"
            android:textAllCaps="false"
            android:text="@string/next"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_20sp"
            app:face="@string/font_malgun_semi_light" />
    </LinearLayout>
</LinearLayout>