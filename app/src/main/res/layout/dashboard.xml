<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.tnedicca.routewise.pageviewer.AutoScrollViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_seekArcContainer_height" />

    <com.tnedicca.routewise.pageviewer.CirclePageIndicator
        android:id="@+id/pagerindicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pager"
        android:layout_marginTop="@dimen/dimen_pagerindicator_margin_top" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pagerindicator"
        android:layout_marginTop="@dimen/dimen_scrollview_padding"
        android:fillViewport="true"
        android:paddingTop="@dimen/dimen_scrollview_padding"
        android:paddingLeft="@dimen/dimen_scrollview_padding"
        android:paddingRight="@dimen/dimen_scrollview_padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <com.tnedicca.routewise.views.CustomButton
                android:id="@+id/my_trip"
                android:layout_width="@dimen/dimen_dashboard_button_width"
                android:layout_height="@dimen/dimen_dashboard_button_height"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/login_button_shape"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/my_trips"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_15sp"
                app:face="@string/font_malgun_semi_light" />

            <com.tnedicca.routewise.views.CustomButton
                android:id="@+id/plan_trip"
                android:layout_width="@dimen/dimen_dashboard_button_width"
                android:layout_height="@dimen/dimen_dashboard_button_height"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_plan_trip_button_margin_top"
                android:background="@drawable/login_button_shape"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/plan_trip"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_15sp"
                app:face="@string/font_malgun_semi_light" />

            <com.tnedicca.routewise.views.CustomButton
                android:id="@+id/logout"
                android:layout_width="@dimen/dimen_dashboard_button_width"
                android:layout_height="@dimen/dimen_dashboard_button_height"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_plan_trip_button_margin_top"
                android:background="@drawable/login_button_shape"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/log_out"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_15sp"
                app:face="@string/font_malgun_semi_light" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>