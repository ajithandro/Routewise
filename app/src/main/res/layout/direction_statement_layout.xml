<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dimen_10dp"
    android:layout_marginRight="@dimen/dimen_10dp"
    android:layout_marginTop="@dimen/dimen_10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.tnedicca.routewise.views.CustomTextView
            android:id="@+id/statement_text"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_28dp"
            android:layout_weight=".5"
            android:text="Statement"
            android:textColor="@color/nearBlack"
            android:textSize="@dimen/dimen_16sp"
            app:face="@string/font_malgun_semi_light" />

        <com.tnedicca.routewise.views.CustomTextView
            android:id="@+id/distance"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight=".2"
            android:ellipsize="end"
            android:gravity="center_vertical|center_horizontal"
            android:text="distance"
            android:textColor="@color/battleshipGrey"
            android:textSize="@dimen/dimen_16sp"
            app:face="@string/font_malgun_semi_light" />
    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_below="@+id/email_layout"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:background="@color/battleshipGrey" />

</LinearLayout>