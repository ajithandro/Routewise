<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tnedicca.routewise.views.CustomTextView
        android:id="@+id/error_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:text="@string/login_error"
        android:textColor="@color/red"
        android:textSize="@dimen/dimen_12sp"
        app:face="@string/font_malgun_semi_light" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/error_msg">

        <ImageView
            android:id="@+id/validation_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/edit_text"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_erroricon" />

        <com.tnedicca.routewise.views.CustomEditTextView
            android:id="@+id/edit_text"
            android:layout_width="@dimen/dimen_200dp"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/edit_text_shape"
            android:cursorVisible="true"
            android:gravity="center"
            android:hint="@string/email"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:textColor="@color/nearBlack"
            android:textSize="@dimen/dimen_15sp"
            android:textColorHint="@color/battleshipGrey"
            android:textCursorDrawable="@null"
            app:face="@string/font_malgun_semi_light" />
    </RelativeLayout>
</RelativeLayout>