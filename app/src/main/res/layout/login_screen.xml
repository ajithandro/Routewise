<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/routewiseImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dimen_10dp"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:src="@drawable/app_logo" />

    <fragment
        android:id="@+id/email_view"
        android:name="com.tnedicca.routewise.fragments.FragmentView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/routewiseImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_18dp"
        tools:layout="@layout/fragment_layout" />

    <fragment
        android:id="@+id/password_view"
        android:name="com.tnedicca.routewise.fragments.FragmentView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_0dp"
        tools:layout="@layout/fragment_layout" />

    <com.tnedicca.routewise.views.CustomTextView
        android:id="@+id/forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_9dp"
        android:text="@string/forgot_password"
        android:textColor="@color/blue"
        android:textSize="@dimen/dimen_15sp"
        app:face="@string/font_malgun_bold" />

    <com.tnedicca.routewise.views.CustomButton
        android:id="@+id/login_button"
        android:layout_width="@dimen/dimen_200dp"
        android:layout_height="@dimen/dimen_40dp"
        android:layout_below="@+id/forgot_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_18dp"
        android:background="@drawable/login_button_shape"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/log_in"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_15sp"
        app:face="@string/font_malgun_semi_light" />

    <com.tnedicca.routewise.views.CustomTextView
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_18dp"
        android:text="Register"
        android:textColor="@color/blue"
        android:textSize="@dimen/dimen_15sp"
        android:textStyle="bold"
        app:face="@string/font_malgun_bold" />

    <com.tnedicca.routewise.views.CustomTextView
        android:id="@+id/keep_meloged_in_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/privacy_policy"
        android:layout_alignRight="@+id/privacy_policy"
        android:layout_below="@+id/register"
        android:layout_marginTop="@dimen/dimen_26dp"
        android:text="@string/keep_me_logged_in"
        android:textColor="@color/nearBlack"
        android:textSize="@dimen/dimen_15sp"
        app:face="@string/font_malgun_semi_light" />

    <com.kyleduo.switchbutton.SwitchButton
        android:id="@+id/keep_me_loged_in_switch"
        style="@style/SwitchButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:layout_toEndOf="@+id/keep_meloged_in_text"
        android:layout_toRightOf="@+id/keep_meloged_in_text"
        android:checked="true"
        app:kswBackDrawable="@drawable/miui_back_drawable"
        app:kswBackMeasureRatio="1.7"
        app:kswThumbDrawable="@drawable/miui_thumb_drawable"
        app:kswThumbHeight="@dimen/dimen_18dp"
        app:kswThumbWidth="@dimen/dimen_18dp" />

    <com.tnedicca.routewise.views.CustomTextView
        android:id="@+id/privacy_policy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/trademark"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dimen_10dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="Privacy Policy"
        android:textColor="@color/blue"
        android:textSize="@dimen/dimen_15sp"
        app:face="@string/font_malgun_bold" />

    <com.tnedicca.routewise.views.CustomTextView
        android:id="@+id/trademark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/tnedicca"
        android:textColor="@color/nearBlack"
        android:textSize="@dimen/dimen_12sp"
        app:face="@string/font_malgun_semi_light" />

    <!--<com.tnedicca.routewise.views.CustomTextView
        android:id="@+id/trademark_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/privacy_policy"
        android:layout_toEndOf="@+id/trademark"
        android:layout_toRightOf="@+id/trademark"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/registered_mark"
        android:textColor="@color/nearBlack"
        android:textSize="@dimen/dimen_9sp"
        app:face="@string/font_malgun_semi_light" />-->

</RelativeLayout>