<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen_5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60dp"
        android:layout_weight="3"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/back_layout"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="match_parent"
            android:layout_gravity="left|center_vertical"
            android:layout_weight="0.15"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:contentDescription="BackIcon"
                android:src="@drawable/ic_backicon" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.6"
            android:orientation="vertical">

            <com.tnedicca.routewise.views.CustomTextView
                android:id="@+id/action_bar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:padding="@dimen/dimen_5dp"
                android:text="Chennai - Villupuram - Trichy - Kanyakumari Rd and NH36"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_18sp"
                app:autoResize="true"
                app:face="@string/font_malgun_bold" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_5dp">

                <com.tnedicca.routewise.views.CustomTextView
                    android:id="@+id/duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="20 mins"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_16sp"
                    app:face="@string/font_malgun_semi_light" />

                <com.tnedicca.routewise.views.CustomTextView
                    android:id="@+id/distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:layout_toRightOf="@+id/duration"
                    android:text="(9.82mi)"
                    android:textColor="@color/battleshipGrey"
                    android:textSize="@dimen/dimen_14sp"
                    app:face="@string/font_malgun_semi_light" />
            </RelativeLayout>
        </LinearLayout>

        <com.tnedicca.routewise.views.CustomButton
            android:id="@+id/direction"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_35dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:layout_marginRight="@dimen/dimen_5dp"
            android:background="@drawable/login_button_shape"
            android:padding="@dimen/dimen_5dp"
            android:text="Directions"
            android:textSize="@dimen/dimen_15sp"
            android:textColor="@color/white"
            app:face="@string/font_malgun_semi_light" />

    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_below="@+id/search_layout"
        android:background="@android:color/darker_gray" />
</LinearLayout>