<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <stroke
                android:width="@dimen/radio_border"
                android:color="@color/blue" />
            <size
                android:width="@dimen/radio_width"
                android:height="@dimen/radio_width" />
        </shape>
    </item>
    <item
        android:bottom="@dimen/radio_margin"
        android:left="@dimen/radio_margin"
        android:right="@dimen/radio_margin"
        android:top="@dimen/radio_margin">
        <shape android:shape="oval">
            <solid
                android:width="1dp"
                android:color="@color/blue" />
            <size
                android:width="@dimen/radio_fill_width"
                android:height="@dimen/radio_fill_width" />
        </shape>
    </item>
</layer-list>